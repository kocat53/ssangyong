extends ./template/layout

//- 상단 컨텐츠
mixin featContent(cs,text)
	div(class=`main_feature ${cs}`)
		strong.common_title(aria-hidden='true')!= text[0]
		p.desc_feature!= text[1]
	a.common_title.menu_feat.sm(href='#;')!= text[2]
	a.common_title.menu_feat.sm(href='#;')!= text[3]

block content
	h2.blind 회사소개
	// 상단
	section.company_feature
		article.item_feature
			h3.blind 쌍용자동차 스토리
			.box_feature
				+featContent('feat_story',['Story','쌍용자동차의 과거와 현재 이야기','기업이념','History'])
		article.item_feature
			h3.blind 쌍용자동차 활동
			.box_feature
				+featContent('feat_us',['Us','지역사회 동반 성장을 위한 지속가능경영','상생경영','윤리경영'])
		article.item_feature
			h3.blind 쌍용자동차 가치
			.box_feature
				+featContent('feat_value',['Value','No.1 SUV 브랜드로서 가치를 높이기 위한 노력','연구개발','디자인'])
	hr
	// 하단
	section.company_info
		ul.list_company_info
			li.info_slider.line_content_wrap
				strong.common_title 사업장 소개
				.slider_wrokspace
					.swiper-container
						.swiper-wrapper
							-for(s=0; s<4;s++)
								a(href="#").swiper-slide
									img(src="img/company_slider1.jpg", alt="") 
									.box_workspace
										strong 평택공장
					button(type='button').btn_arrow.arrow_prev
						span.blind 이전
					button(type='button').btn_arrow.arrow_next
						span.blind 다음
					.workspace_dot
			li.line_content_wrap
				a.item_wrap.info_bg_logo(href='#;')
					strong.common_title CI
					p.desc_feature 인간과 자연, 기술이 조화된<br>쌍용자동차 CI
			li.line_content_wrap
				a.item_wrap.info_bg_ballon(href='#;')
					strong.common_title 사회공헌활동
					p.desc_feature 따뜻함을 전하는 기업,<br>쌍용자동차와 고객은 하나입니다.
			li.line_content_wrap
				a.item_wrap.info_bg_magazin(href='#;')
					strong.common_title 회사소개 브로슈어
					p.desc_feature 책자를 통해<br>쌍용자동차를 만나보세요.
			li.line_content_wrap
				a.item_wrap.info_bg_mihan(href='#;')
					strong.common_title 마힌드라 소개
					p.desc_feature 임직원의 삶과 회사의 도약을<br>함께 추구합니다.
	hr